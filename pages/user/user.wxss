@import "/pages/head/head.wxss";

.user-head {
    width: 100%;
    height: 200px;
    background: #6666CC;
    text-align: center;
}
.user-head .head-img {
    display: inline-block;
    margin-top: 30px;
    width: 140px;
    height: 140px;
    background: #eee;
    border-radius: 71px;
    overflow: hidden;
    border: 2px solid #fff;
}
.nav {
    width: 100%;
    background: #6666CC;
}
.nav > view {
    width: 100%;
    margin: 0 auto;
}
.nav > view navigator {
    width: 33.33%;
    float: left;
    padding: 10px 0;
    text-align: center;
}
.nav > view navigator image {
    position: relative;
    width: 20px;
    height: 20px;
    top: 4px;
}
.nav > view navigator text {
    font-size: 16px;
    color: #fff;
    padding: 0 4px;
}
.info-list {
    width: 100%;
    padding: 20px 0;
}
.info-list .info {
    margin: 0 5%;
    font-size: 14px;
    padding: 15px 0;
    border-bottom: 1px solid #f5f5f5;
}
.info-list .info .info-key {
    width: 30%;
    float: left;
    color: #333;
    font-weight: 800;
}
.info-list .info .info-value {
    width: 70%;
    float: left;
    color: #888;
    text-align: right;
}